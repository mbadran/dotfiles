# process .bashrc
if [ -f ~/.bashrc ]; then
  . ~/.bashrc
fi

# vim instead of less
export PAGER=/usr/local/bin/vimpager

# use brew binaries first
export PATH=/usr/local/bin:$PATH

# java
export JAVA_HOME='/Library/Java/JavaVirtualMachines/jdk1.8.0_66.jdk/Contents/Home/'

# ansible
export PATH=/opt/ansible/bin:$PATH
export PYTHONPATH=/opt/ansible/lib:$PYTHONPATH
export MANPATH=/opt/ansible/docs/man:$MANPATH
export ANSIBLE_LIBRARY=/opt/ansible/library

# increase the number of commands remembered in the history
export HISTSIZE=901

# colorise ls
if [ -f ~/.dir_colors ]; then
  export LSCOLORS="gxfxcxdxbxegedabagacad"
fi
